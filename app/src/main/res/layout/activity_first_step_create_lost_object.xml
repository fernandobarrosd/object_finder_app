<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/lostObjectPhotoImageView"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/image_placeholder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.111" />

    <EditText
        android:id="@+id/lostObjectNameEditText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="40dp"
        android:ems="10"
        android:hint="@string/lost_object_name_hint"
        android:inputType="text"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:textColorHint="#DCD2D2"
        android:paddingHorizontal="15dp"
        android:background="@drawable/bg_circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lostObjectPhotoImageView"
        app:layout_constraintVertical_bias="0.144" />

    <EditText
        android:id="@+id/lostObjectDescriptionEditText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="40dp"
        android:background="@drawable/input_bg_color"
        android:ems="10"
        android:hint="@string/lost_object_description_hint"
        android:inputType="text"
        android:paddingHorizontal="15dp"
        android:textColor="@color/white"
        android:textColorHint="#DCD2D2"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lostObjectNameEditText"
        app:layout_constraintVertical_bias="0.144" />



    <Spinner
        android:id="@+id/categoriesSpinner"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:background="#0b6c1d"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="74dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.059"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/lostObjectDescriptionEditText"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/lostObjectDateTextView"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:background="@drawable/input_bg_color"
        android:ems="10"
        android:padding="15dp"
        android:text="@string/lost_object_date_hint"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.068"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/categoriesSpinner"
        app:layout_constraintVertical_bias="0.152"
        tools:ignore="TextFields" />

    <Button
        android:id="@+id/btnNextStep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:background="@drawable/button_bg_color_2"
        android:padding="15dp"
        android:text="@string/btn_next_text"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.918"
        app:layout_constraintStart_toStartOf="parent" />




</androidx.constraintlayout.widget.ConstraintLayout>